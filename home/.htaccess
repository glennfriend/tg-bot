##################################################
Options -Indexes


##################################################
# deny access
<FilesMatch "\.(bak|backup|save|config|inc|ini|sql|log|tar|gz|zip)$">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

# linux
<FilesMatch "\.(sh|swp|swo)$">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

# linux
# -> .htaccess
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>

# ~ tag
# -> index.php~
<FilesMatch "~">
    Order allow,deny
    Deny from all
    Satisfy all
</FilesMatch>


##################################################
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /bot

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php?_url=/$1 [QSA,L]
</IfModule>


##################################################
# redirect HTTPS
#
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>


